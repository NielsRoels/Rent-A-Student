{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}Make a new event{% endblock %}

{% block body %}
	<div class="container">
		<h1>Maak een nieuw evenement</h1>
		<small>
			<p class="text-muted">
				Geef hieronder de informatie in voor een nieuw evenement, deze worden <b class="txt-col-5">automatisch</b> bijgevoegd aan de kalendar met beschikbare data.
			</p>
		</small>
		<hr>
        {{ form_start(form) }}
		{{ form_widget(form) }}
		{{ form_end(form) }}

	</div>
{% endblock %}